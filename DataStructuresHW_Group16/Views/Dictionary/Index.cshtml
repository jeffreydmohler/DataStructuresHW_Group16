
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dictionary Index</title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="~/Content/Site.css" />
</head>
<body>
    <div class="w3-sidebar w3-bar-block" style="width:25%">

        <h3>Dictionary Options</h3>

        <a href="@Url.Action("AddOne", "Dictionary")"
           class="w3-bar-item w3-button">Add One Item to Dictionary</a>

        <a href="@Url.Action("AddList", "Dictionary")"
           class="w3-bar-item w3-button">Add Huge List of Items to Dictionary</a>

        <a href="@Url.Action("Display", "Dictionary")"
           class="w3-bar-item w3-button">Display Dictionary</a>

        @model DataStructuresHW_Group16.Models.UserEntry

        @using (Html.BeginForm("Delete", "Dictionary", FormMethod.Post))
        {
            <input type="submit" class="w3-bar-item w3-input" value="Delete from Dictionary: " />

            @Html.TextBoxFor(delete => delete.userInput)
        }

            <a href="@Url.Action("Clear", "Dictionary")"
               class="w3-bar-item w3-button">Clear Dictionary</a>

        @using (Html.BeginForm("Search", "Dictionary", FormMethod.Post))
        {
            <input type="submit" class="w3-bar-item w3-input" value="Search Dictionary: " />

            @Html.TextBoxFor(search => search.sUserInput)
        }

        <a href="@Url.Action("Return", "Dictionary")"
           class="w3-bar-item w3-button">Return to Main Menu</a>

    </div>
    <div style="margin-left: 25%">
        @Html.Raw(ViewBag.MyDictionary)
    </div>
</body>
</html>
